    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@types/uuid": "^9.0.0",
    "bonjour": "^3.5.0",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
