{
  "name": "private-cloud",
  "version": "1.0.0",
  "description": "A private cloud storage application built with Electron and Angular",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
